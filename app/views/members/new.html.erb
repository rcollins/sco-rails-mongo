<div class="container">
  <div class="row">
    <h3 class="text-center">Add New Member</h3> 
      <div class="col-md-4 col-md-offset-4"></div>
        <div class="well">
          <%= form_for "/members" do |f| %>
            <div class="form-group">
              <%= f.label :first %>
              <%= f.text_field :fname, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :last %>
              <%= f.text_field :lname, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :day %>
              <%= select_tag(:workDay, options_for_select(
                [
                  ['Select Work Day', 1], 
                  ['Friday, July 21', 2], 
                  ['Saturday, July 22', 3], 
                  ['Sunday, July 23',4]
                ], 
              1), class: 'form-control') %>
            </div>
            <div class="form-group">
              <%= f.label :time %>
              <%= select_tag(:workTime, options_for_select(
                [
                  ['Select Work Time', 1], 
                  ['10:30am - 12:30pm', 2], 
                  ['10:30am - 12:30pm, After-service cleanup', 3], 
                  ['12:30pm - 2:30pm',4],
                  ['12:30pm - 2:30pm, After-service cleanup', 5],
                  ['2:30pm - 4:30pm', 6],
                  ['2:30pm - 4:30pm, After-service cleanup', 7],
                  ['4:30pm - 6:30pm', 8],
                  ['4:30pm - 6:30pm, After-service cleanup', 9],
                  ['6:30pm - end of service', 10],
                  ['6:30pm - end of service, After-service cleanup', 11],
                ], 
              1), class: 'form-control') %>
            </div>
            
            <%= f.submit 'Submit', class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>    
</div>